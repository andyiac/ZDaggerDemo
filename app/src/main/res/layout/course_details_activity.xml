<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <VideoView
                android:id="@+id/id_vv_course_details_video"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/id_course_details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="10dp"
                android:text="要把百度的智能,大脑带到更多设备上"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="200人看过" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="200评论" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="200人点赞" />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/id_course_details_author_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="12dp"
                    android:background="#ff76a0" />

                <TextView
                    android:id="@+id/id_course_details_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/id_course_details_author_avatar"
                    android:gravity="bottom"
                    android:text="李晶"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/id_course_details_author_work"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignLeft="@id/id_course_details_author_name"
                    android:layout_below="@id/id_course_details_author_name"
                    android:gravity="center_vertical"
                    android:text="小饭桌CEO" />

                <TextView
                    android:id="@+id/id_course_details_author_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/id_course_details_author_avatar"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="6dp"
                    android:padding="10dp"
                    android:text="课程简程简程简程简程简程简程简程简程简程简程简程简程简程简程简程简程简程简介" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="课程简介" />

                <TextView
                    android:id="@+id/id_course_details_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="6dp"
                    android:padding="10dp"
                    android:text="课程简程简程简程简程简程简程简程简程简程简程简程简程简程简程简程简程简程简介" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <!--android:background="@color/c19"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">
            <!--android:background="@color/white"-->

            <TextView
                android:id="@+id/theme_detail_activity_tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:text="评论"
                android:textSize="20sp"
                android:visibility="gone" />
            <!--android:textColor="@color/c4"-->

            <TextView
                android:id="@+id/theme_detail_activity_et_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="top"
                android:hint="评论..."
                android:maxLines="4"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:textSize="20sp" />
            <!--android:textColor="@color/text_color_989898"-->
            <!--android:background="@color/c7"-->

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>