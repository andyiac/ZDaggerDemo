<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_card"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_course_item_img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:background="#ff76a0"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_course_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="十分钟学会融资课程,十分钟学会融资课程"
            android:textColor="#565656"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_course_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="李晶"
            android:textColor="#6d85a3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_course_item_author_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:text="小饭桌 CEO"
            android:textColor="#696969"
            android:textSize="16sp" />


    </LinearLayout>

</RelativeLayout>
