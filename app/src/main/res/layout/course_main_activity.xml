<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ff76a0" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2">

        <TextView
            android:drawableTop="@mipmap/course_1"
            android:text="财务" />

        <TextView
            android:drawableTop="@mipmap/course_1"
            android:text="财务" />

        <TextView
            android:drawableTop="@mipmap/course_1"
            android:text="财务" />

        <TextView
            android:drawableTop="@mipmap/course_1"
            android:text="财务" />

        <TextView
            android:drawableTop="@mipmap/course_1"
            android:text="财务" />

        <TextView
            android:drawableTop="@mipmap/course_1"
            android:text="财务" />

        <TextView
            android:drawableTop="@mipmap/course_1"
            android:text="财务" />

        <TextView
            android:drawableTop="@mipmap/course_1"
            android:text="财务" />


    </GridLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_rv_course_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00caa9"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:drawableLeft="@mipmap/course_basic_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="创业必修课" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="财务" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="融资" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="法律" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="更多" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_rv_course_basic"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#5ed3cd"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:drawableLeft="@mipmap/course_pro_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="创业进阶课" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="财务" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="融资" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="法律" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="更多" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_rv_course_pro"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#6d85a3"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" />


</LinearLayout>